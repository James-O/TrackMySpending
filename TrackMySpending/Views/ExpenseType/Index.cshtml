@model IEnumerable<TrackMySpending.Models.ExpenseType>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expenses Type List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary">Create new Expense Type</a>
        </div>
    </div>
    <br />
    @if(Model.Count()>0){
        <table class="table table-stripped table-bordered w-10">
            <thead>
                <tr>
                    <th>Expense Type</th>
                    
                    <th>Keys</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                   <tr>
                       <td width="45%">@item.Name</td>
                        <td class="w-10 btn-group">
                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-small">Update</a>
                            <form asp-action="Delete" asp-route-id="@item.Id"><button type="submit" class="btn btn-danger btn-small" onclick="return confirm('Are you sure to delete this record?')">Delete</button></form>
                        </td>
                   </tr> 
                }
            </tbody>
        </table>
    }
    else{
        <p>No Expenses found</p>
    }
</div>